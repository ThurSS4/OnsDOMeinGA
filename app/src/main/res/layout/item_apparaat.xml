<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/apparaatIcoon"
            android:src="@drawable/ic_lightbulb_black"
            android:contentDescription="Icon describing the device"/>

        <TextView
            android:id="@+id/apparaatNaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/image_edit_apparaat"
            android:layout_toEndOf="@+id/apparaatIcoon"
            android:layout_marginEnd="8dp"
            android:text="Apparaat naam"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apparaatOmschrijving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apparaatNaam"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/apparaatIcoon"
            android:layout_toStartOf="@+id/image_edit_apparaat"
            android:text="Apparaat omschrijving"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_edit_apparaat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit_black"
            android:contentDescription="Edit button" />

    </RelativeLayout>

</android.support.v7.widget.CardView>